{
    "name": "@react-freyja/material",
    "main": "./dist/web.bundle.js",
    "react-native": "./dist/native.bundle.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist/",
        "src/"
    ],
    "scripts": {
        "build": "webpack && pnpm run generate-declarations",
        "build:web": "webpack --config webpack.web.config.js && pnpm run generate-declarations",
        "build:native": "webpack --config webpack.native.config.js && pnpm run generate-declarations",
        "watch": "webpack watch",
        "watch:web": "webpack --config webpack.web.config.js watch",
        "watch:native": "webpack --config webpack.native.config.js watch",
        "generate-declarations": "zxpp ./scripts/generateDeclarations.ts"
    },
    "devDependencies": {
        "@babel/core": "^7.18.9",
        "@babel/preset-env": "7.2.0",
        "@babel/runtime": "^7.18.9",
        "@react-freyja/eslint-config": "workspace:*",
        "@react-freyja/style-engine": "workspace:*",
        "@types/node": "^18.7.13",
        "@types/react": "^18.0.14",
        "@types/react-native": "^0.69.1",
        "@types/webpack": "^5.28.0",
        "babel-loader": "^8.2.5",
        "dts-bundle-generator": "^6.12.0",
        "metro-react-native-babel-preset": "^0.70.3",
        "ts-loader": "^9.3.1",
        "typescript": "^4.8.2",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0",
        "webpack-merge": "^5.8.0",
        "zxpp": "^0.2.1"
    },
    "dependencies": {
        "@react-freyja/base": "workspace:*",
        "@react-freyja/theme": "workspace:*",
        "@sirse-dev/safe-context": "^0.3.0"
    },
    "peerDependencies": {
        "react": "^18.2.0",
        "react-native": "0.69.1"
    }
}