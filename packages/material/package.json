{
    "name": "@react-freyja/material",
    "main": "./dist/web.bundle.js",
    "react-native": "./dist/native/commonjs/index.native.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist/",
        "src/"
    ],
    "scripts": {
        "build": "pnpm run build:web && pnpm run build:native",
        "build:web": "webpack && pnpm run generate-declarations",
        "build:native": "bob build && pnpm run generate-declarations",
        "generate-declarations": "zxpp ./scripts/generateDeclarations.ts",
        "watch:web": "webpack watch"
    },
    "devDependencies": {
        "@babel/core": "^7.18.9",
        "@babel/preset-env": "7.2.0",
        "@babel/runtime": "^7.18.9",
        "@react-freyja/eslint-config": "workspace:*",
        "@react-freyja/style-engine": "workspace:*",
        "@types/node": "^18.7.13",
        "@types/react": "^18.0.14",
        "@types/react-native": "^0.69.1",
        "@types/webpack": "^5.28.0",
        "dts-bundle-generator": "^6.12.0",
        "react-native-builder-bob": "^0.18.3",
        "ts-loader": "^9.3.1",
        "typescript": "^4.8.2",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0",
        "zxpp": "^0.2.1"
    },
    "dependencies": {
        "@react-freyja/base": "workspace:*",
        "@react-freyja/theme": "workspace:*",
        "@sirse-dev/safe-context": "^0.3.0"
    },
    "peerDependencies": {
        "react": "^18.2.0",
        "react-native": "0.69.1"
    },
    "react-native-builder-bob": {
        "source": "src",
        "output": "dist/native",
        "targets": [
          ["commonjs", {"copyFlow": true}],
          "module",
          "typescript"
        ]
    }
}